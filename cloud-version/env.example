# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS não é necessário - usa gcloud CLI credentials

# BigQuery Configuration
BQ_DATASET=anomaly_detection
BQ_LOCATION=US

# Cloud Run Configuration
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_CPU=1
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_CONCURRENCY=80

# Service Configuration
TRAINING_SERVICE_NAME=anomaly-training
INFERENCE_SERVICE_NAME=anomaly-inference
MONITORING_SERVICE_NAME=anomaly-monitoring

# Local Development (optional)
PORT=8080
TRAINING_SERVICE_URL=http://localhost:8080
INFERENCE_SERVICE_URL=http://localhost:8081
MONITORING_SERVICE_URL=http://localhost:8082

# Deployment Configuration
DOCKER_REGISTRY=gcr.io
IMAGE_TAG=latest

# User Configuration (for IAM and notifications)
USER_EMAIL=your-email@domain.com
ADMIN_EMAIL=admin@domain.com

# Security Configuration
ENABLE_AUTHENTICATION=false
JWT_SECRET_KEY=your-secret-key-here

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=30
ALERT_THRESHOLD_P95_MS=200
ALERT_THRESHOLD_ERROR_RATE=5

# Cost Management
BUDGET_ALERT_THRESHOLD=50.00
BUDGET_ALERT_EMAIL=billing@domain.com
