# =====================================
# ANOMALY DETECTION SYSTEM - ENVIRONMENT VARIABLES
# =====================================
# Copy this file to .env and update the values according to your environment

# =====================================
# DATABASE SETTINGS
# =====================================
DATABASE_URL=postgresql://anomaly_user:change_this_password_in_production@postgres:5432/anomaly_db

# =====================================
# REDIS SETTINGS
# =====================================
REDIS_URL=redis://redis:6379/0

# =====================================
# API SETTINGS
# =====================================
API_TITLE=Time Series Anomaly Detection API
API_DESCRIPTION=Sistema de detecção de anomalias com múltiplos series_id e versionamento
API_VERSION=1.0.0

# =====================================
# PERFORMANCE SETTINGS
# =====================================
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
REDIS_CACHE_TTL=3600

# =====================================
# ML ALGORITHM SETTINGS
# =====================================
ANOMALY_THRESHOLD=3.0
MIN_TRAINING_POINTS=2